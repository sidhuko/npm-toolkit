{
  "name": "npm-toolkit",
  "version": "1.0.0-alpha",
  "description": "Flexible script launcher.",
  "main": ".",
  "bin": {
    "nt": "cli.js"
  },
  "scripts": {
    "lint": "./node_modules/.bin/eslint .",
    "test": "./node_modules/.bin/istanbul cover ./node_modules/.bin/_mocha",

  "bugs": {
    "url": "https://github.com/vot/npm-toolkit/issues"
  },
  "homepage": "https://github.com/vot/npm-toolkit",
  "dependencies": {
    "chalk": "^1.0.0",
    "clarg": "0.0.4",
    "fs-extra": "^0.21.0",
    "glob": "^5.0.10",
    "lodash": "^3.9.3"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "coveralls": "^2.13.1",
    "eslint": "^3.19.0",
    "istanbul": "^0.4.5",
    "mocha": "^3.3.0",
    "mocha-lcov-reporter": "^1.3.0"
